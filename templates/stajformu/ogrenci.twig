{% block ogrenci %}
  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}

    {% block labelblock %}
      {{ form.label("numara", "Öğrenci Numarası", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      {{ form.input("numara", "number", "form-control", {"placeholder" : "Numaranız", "required" : "true"}) }}
    {% endblock %}

    {% block warningblock %}
      Öğrenci numarası hatalı.
    {% endblock %}
  {% endembed %}

  {##############################################################}
  {######################### Adi Soyadi #########################}
  {##############################################################}

  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}

    {% block labelblock %}
      {{ form.label("adsoyad","Adınız Soyadınız", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      {{ form.input("adsoyad","text", "form-control", {"placeholder" : "Ad Soyad", "required" : "true"}) }}
    {% endblock %}

    {% block warningblock %}
      Ad Soyad alanına değer girmediniz.
    {% endblock %}
  {% endembed %} 

  {##############################################################}
  {####################### TC Kimlik No #########################}
  {##############################################################}

  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}

    {% block labelblock %}
      {{ form.label("tckimlikno","T.C. Kimlik Numaranız", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      {{ form.input("tckimlikno", "number", "form-control", {"placeholder" : "Kimlik No", "required" : "true"}) }}
    {% endblock %}

    {% block warningblock %}
      T.C. Kimlik numaranız hatalı
    {% endblock %}
  {% endembed %} 



  {##############################################################}
  {################## Telefon Numarası ##########################}
  {##############################################################}

  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}

    {% block labelblock %}
      {{ form.label("telefonno","Telefon Numarası", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      {{ form.input("telefonno","tel", "form-control", {"placeholder" : "(XXX)YYYYYYY", "required" : "true", "pattern" : "\\(\\d{3}\\)\\s\\d{3}\\s\\d{2}\\s\\d{2}"}) }}
    {% endblock %}

    {% block warningblock %}
      Telefon numarasını hatalı girdiniz.
    {% endblock %}
  {% endembed %} 

  {##############################################################}
  {########################### Program ##########################}
  {##############################################################}

  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}

    {% block labelblock %}
      {{ form.label("program","Progamınız", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      {{ form.select("program","form-control", bolumprogram, "Program")  }}
    {% endblock %}

    {% block warningblock %}
      Telefon numarasını hatalı giriniz.
    {% endblock %}
  {% endembed %} 

  {##############################################################}
  {########################### Program ##########################}
  {##############################################################}

  {% embed 'utils/three-five.twig' %}
    {% import "utils/macros.forms.twig" as form %}
