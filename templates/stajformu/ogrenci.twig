      {{ form.label("yapilacakstaj","Yapılacak Stajlar", "col-sm-3 col-form-label") }}
    {% endblock %}

    {% block inputblock %}
      <div class="form-check">
        {{ form.checkbox("yapilacakstajlar[]", "yapilacakstaj1", "form-check-input", "EDE102", {"required" : "true"}) }}
