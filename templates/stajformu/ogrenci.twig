      <div class="form-check">
        {{ form.checkbox("yapilacakstajlar[]", "yapilacakstaj2", "form-check-input", "EDE202", {"required" : "true"}) }}
        {{ form.label("yapilacakstaj2","EDE202 (2. Staj)", "form-check-label") }}
      </div>
    {% endblock %}

    {% block warningblock %}
      Telefon numarasını hatalı giriniz.
    {% endblock %}
